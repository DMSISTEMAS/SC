<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/db_cce?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <mapping resource="org/cce/sistema/model/Catequizado.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Bitacora.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Parroquia.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Calificacion.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Porcentaje.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Registro.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Municipio.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Direccion.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Ciclo.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Catequista.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Usuario.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Parroco.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Horario.hbm.xml"/>
    <mapping resource="org/cce/sistema/model/Libro.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
